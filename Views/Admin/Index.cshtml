@using System.Text.Json
<div class="container-fluid py-5">
    <!-- Header Section -->
    <div class="mb-5">
        <h1 class="display-4 fw-bold text-dark mb-2">
            <i class="fas fa-chart-line me-3" style="color: #0d6efd;"></i>Tableau de Bord Pharmacare
        </h1>
        <p class="text-muted fs-5">Bienvenue sur votre centre de gestion - Suivi en temps réel de vos données</p>
    </div>

    <!-- Alert Section -->
    @{
        var lowStockCount = ViewBag.LowStockCount as int? ?? 0;
        var outOfStockCount = ViewBag.OutOfStockCount as int? ?? 0;
    }

    @if (outOfStockCount > 0)
    {
        <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert" style="border-left: 5px solid #dc3545; border-radius: 8px;">
            <div class="d-flex align-items-center">
                <i class="fas fa-exclamation-triangle me-3 fs-5"></i>
                <div>
                    <h5 class="alert-heading mb-1"><i class="fas fa-ban me-2"></i>Rupture de Stock Critique</h5>
                    <p class="mb-0">Il y a <strong>@outOfStockCount</strong> produit(s) en rupture complète de stock (stock = 0). Action immédiate requise !</p>
                </div>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (lowStockCount > 0)
    {
        <div class="alert alert-warning alert-dismissible fade show mb-4" role="alert" style="border-left: 5px solid #ffc107; border-radius: 8px;">
            <div class="d-flex align-items-center">
                <i class="fas fa-exclamation-circle me-3 fs-5"></i>
                <div>
                    <h5 class="alert-heading mb-1"><i class="fas fa-chart-line me-2"></i>Stock Faible</h5>
                    <p class="mb-0">Il y a <strong>@lowStockCount</strong> produit(s) avec un stock faible (entre 1 et 9 unités). Pensez à les réapprovisionner bientôt.</p>
                </div>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Key Metrics Section -->
    <div class="row g-4 mb-5">
        <!-- Total Products Card -->
        <div class="col-lg-3 col-md-6">
            <div class="card h-100 border-0 shadow-sm" style="transition: transform 0.3s, box-shadow 0.3s;">
                <div class="card-body d-flex align-items-center">
                    <div class="me-3">
                        <div class="p-3 bg-primary bg-opacity-10 rounded-circle" style="width: 60px; height: 60px; display: flex; align-items: center; justify-content: center;">
                            <i class="fas fa-boxes fs-4 text-primary"></i>
                        </div>
                    </div>
                    <div>
                        <p class="text-muted mb-1 small">Total Produits</p>
                        <h3 class="mb-0 fw-bold">@(ViewBag.TotalProducts ?? 0)</h3>
                        <small class="text-success"><i class="fas fa-arrow-up"></i> En stock</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Low Stock Products Card -->
        <div class="col-lg-3 col-md-6">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body d-flex align-items-center">
                    <div class="me-3">
                        <div class="p-3 bg-warning bg-opacity-10 rounded-circle" style="width: 60px; height: 60px; display: flex; align-items: center; justify-content: center;">
                            <i class="fas fa-exclamation-triangle fs-4 text-warning"></i>
                        </div>
                    </div>
                    <div>
                        <p class="text-muted mb-1 small">Stock Faible</p>
                        <h3 class="mb-0 fw-bold">@lowStockCount</h3>
                        <small class="text-danger"><i class="fas fa-alert"></i> Attention requise</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Out of Stock Card -->
        <div class="col-lg-3 col-md-6">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body d-flex align-items-center">
                    <div class="me-3">
                        <div class="p-3 bg-danger bg-opacity-10 rounded-circle" style="width: 60px; height: 60px; display: flex; align-items: center; justify-content: center;">
                            <i class="fas fa-ban fs-4 text-danger"></i>
                        </div>
                    </div>
                    <div>
                        <p class="text-muted mb-1 small">Rupture de Stock</p>
                        <h3 class="mb-0 fw-bold">@(ViewBag.OutOfStockCount ?? 0)</h3>
                        <small class="text-danger"><i class="fas fa-times"></i> Action immédiate</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Total Categories Card -->
        <div class="col-lg-3 col-md-6">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body d-flex align-items-center">
                    <div class="me-3">
                        <div class="p-3 bg-success bg-opacity-10 rounded-circle" style="width: 60px; height: 60px; display: flex; align-items: center; justify-content: center;">
                            <i class="fas fa-tags fs-4 text-success"></i>
                        </div>
                    </div>
                    <div>
                        <p class="text-muted mb-1 small">Catégories</p>
                        <h3 class="mb-0 fw-bold">@(ViewBag.TotalCategories ?? 0)</h3>
                        <small class="text-success"><i class="fas fa-check"></i> Actives</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content Area -->
    <div class="row g-4 mb-5">
        <!-- Product Sales Timeseries -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-light border-bottom">
                    <h5 class="mb-0"><i class="fas fa-chart-line me-2 text-primary"></i>Évolution des Ventes (produits principaux)</h5>
                </div>
                <div class="card-body">
                    <canvas id="productSalesChart" height="90"></canvas>
                </div>
            </div>
        </div>

        <!-- Payment Breakdown -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-light border-bottom">
                    <h5 class="mb-0"><i class="fas fa-credit-card me-2 text-warning"></i>Répartition des Méthodes de Paiement</h5>
                </div>
                <div class="card-body d-flex flex-column align-items-center justify-content-center">
                    <canvas id="paymentChart" width="260" height="260"></canvas>
                    <small class="text-muted mt-3">Nombre de paiements par méthode</small>
                </div>
            </div>
            <div class="card mt-3 border-0 shadow-sm">
                <div class="card-body">
                    <h6 class="mb-2">Actions Rapides</h6>
                    <div class="d-flex flex-column gap-2">
                        <a class="btn btn-outline-primary btn-sm" asp-controller="Produits" asp-action="Index"><i class="fas fa-cube me-2"></i>Gérer les Produits</a>
                        <a class="btn btn-outline-success btn-sm" asp-controller="Clients" asp-action="Index"><i class="fas fa-users me-2"></i>Gérer les Clients</a>
                        <a class="btn btn-outline-info btn-sm" asp-controller="Parapharmaciens" asp-action="Index"><i class="fas fa-user-md me-2"></i>Gérer les Parapharmaciens</a>
                        <a class="btn btn-outline-secondary btn-sm" asp-controller="Categories" asp-action="Index"><i class="fas fa-folder me-2"></i>Gérer les Catégories</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bottom Section -->
    <div class="row g-4">
        <!-- Top Products -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light border-bottom">
                    <h5 class="mb-0"><i class="fas fa-trophy me-2 text-success"></i>Top 10 Produits Vendus</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th style="width: 5%;">#</th>
                                    <th>Produit</th>
                                    <th class="text-end">Quantité</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var topProducts = ViewBag.TopProducts as List<gestion_pharma.Models.Entities.Produit>;
                                    var topQuantities = ViewBag.TopQuantities as List<int>;
                                }
                                @if (topProducts != null && topQuantities != null)
                                {
                                    for (int i = 0; i < topProducts.Count; i++)
                                    {
                                        <tr>
                                            <td><span class="badge bg-primary">@(i + 1)</span></td>
                                            <td><strong>@topProducts[i].Nom</strong></td>
                                            <td class="text-end"><span class="badge bg-success">@topQuantities[i]</span></td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Low Stock Products -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm border-warning border-start" style="border-left-width: 4px !important;">
                <div class="card-header bg-light border-bottom d-flex align-items-center">
                    <h5 class="mb-0"><i class="fas fa-exclamation-circle me-2 text-warning"></i>Produits en Stock Faible</h5>
                    <span class="badge bg-warning ms-auto">@(lowStockCount)</span>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Produit</th>
                                    <th class="text-center">Stock</th>
                                    <th class="text-end">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var lowStockProducts = ViewBag.LowStockProducts as List<gestion_pharma.Models.Entities.Produit>;
                                }
                                @if (lowStockProducts != null && lowStockProducts.Count > 0)
                                {
                                    foreach (var item in lowStockProducts)
                                    {
                                        <tr>
                                            <td><strong>@item.Nom</strong></td>
                                            <td class="text-center">
                                                @if (item.Stock < 5)
                                                {
                                                    <span class="badge bg-danger">@item.Stock</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">@item.Stock</span>
                                                }
                                            </td>
                                            <td class="text-end"><a asp-controller="Produits" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i></a></td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="3" class="text-center text-success py-3">
                                            <i class="fas fa-check-circle me-2"></i>Tous les stocks sont bons
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    <!-- Out of Stock Section -->
    @if (outOfStockCount > 0)
    {
        <div class="row g-4 mt-2">
            <div class="col-lg-12">
                <div class="card border-0 shadow-sm border-danger border-start" style="border-left-width: 4px !important;">
                    <div class="card-header bg-light border-bottom d-flex align-items-center">
                        <h5 class="mb-0"><i class="fas fa-exclamation-triangle me-2 text-danger"></i>Produits en Rupture de Stock</h5>
                        <span class="badge bg-danger ms-auto">@outOfStockCount</span>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th style="width: 50%;">Produit</th>
                                        <th class="text-center" style="width: 15%;">Stock</th>
                                        <th class="text-center" style="width: 20%;">Catégorie</th>
                                        <th class="text-end" style="width: 15%;">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        var outOfStockProducts = ViewBag.OutOfStockProducts as List<gestion_pharma.Models.Entities.Produit>;
                                    }
                                    @if (outOfStockProducts != null && outOfStockProducts.Count > 0)
                                    {
                                        foreach (var item in outOfStockProducts)
                                        {
                                            <tr class="table-danger">
                                                <td><strong>@item.Nom</strong></td>
                                                <td class="text-center"><span class="badge bg-danger">@item.Stock</span></td>
                                                <td class="text-center">@(item.Categorie?.Nom ?? "N/A")</td>
                                                <td class="text-end"><a asp-controller="Produits" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="fas fa-edit me-1"></i>Réapprovisionner</a></td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .card {
        border-radius: 12px;
        transition: all 0.3s ease;
    }
    
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0,0,0,0.1) !important;
    }
    
    .btn {
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s ease;
    }
    
    .btn:hover {
        transform: translateY(-2px);
    }
    
    .badge {
        border-radius: 6px;
        padding: 0.5em 0.75em;
    }
</style>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        (function(){
            try {
                const labels = JSON.parse('@Html.Raw(JsonSerializer.Serialize(ViewBag.ProductSalesLabels ?? new List<string>()))');
                const datasets = JSON.parse('@Html.Raw(JsonSerializer.Serialize(ViewBag.ProductSalesDatasets ?? new List<object>()))');

                const mappedDatasets = datasets.map(ds => ({
                    label: ds.label,
                    data: ds.data,
                    borderColor: ds.borderColor,
                    backgroundColor: ds.backgroundColor,
                    fill: false,
                    tension: 0.25
                }));

                const ctx = document.getElementById('productSalesChart');
                if (ctx) {
                    new Chart(ctx.getContext('2d'), {
                        type: 'line',
                        data: { labels, datasets: mappedDatasets },
                        options: { responsive: true, plugins: { legend: { position: 'top' } }, scales: { y: { beginAtZero: true } } }
                    });
                }

                const paymentLabels = JSON.parse('@Html.Raw(JsonSerializer.Serialize(ViewBag.PaymentLabels ?? new List<string>()))');
                const paymentData = JSON.parse('@Html.Raw(JsonSerializer.Serialize(ViewBag.PaymentData ?? new List<int>()))');
                const paymentCtx = document.getElementById('paymentChart');
                if (paymentCtx) {
                    new Chart(paymentCtx.getContext('2d'), {
                        type: 'doughnut',
                        data: { labels: paymentLabels, datasets: [{ data: paymentData, backgroundColor: ['#0d6efd','#198754','#ffc107','#dc3545','#6f42c1','#0dcaf0'] }] },
                        options: { responsive: true, plugins: { legend: { position: 'bottom' } } }
                    });
                }
            } catch (e) {
                console.error('Charts init error', e);
            }
        })();
    </script>
}

