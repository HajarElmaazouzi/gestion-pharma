@model gestion_pharma.Models.Entities.Client

@{
    ViewData["Title"] = "Détails client";
}

<h1>Détails client</h1>

<dl class="row">
    <dt class="col-sm-2">Nom</dt>
    <dd class="col-sm-10">@Model.Nom</dd>

    <dt class="col-sm-2">Prénom</dt>
    <dd class="col-sm-10">@Model.Prenom</dd>

    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>

    <dt class="col-sm-2">Téléphone</dt>
    <dd class="col-sm-10">@Model.Telephone</dd>

    <dt class="col-sm-2">Adresse</dt>
    <dd class="col-sm-10">@Model.Adresse</dd>

    <dt class="col-sm-2">Inscription</dt>
    <dd class="col-sm-10">@Model.DateInscription.ToLocalTime().ToString("g")</dd>

    <dt class="col-sm-2">Actif</dt>
    <dd class="col-sm-10">@(Model.IsActive ? "Oui" : "Non")</dd>
</dl>

<p>
    <a asp-action="Index" class="btn btn-secondary">Retour</a>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Supprimer</a>
</p>
