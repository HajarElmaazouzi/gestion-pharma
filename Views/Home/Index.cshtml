@{
    ViewData["Title"] = "Accueil - gestion_pharma";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="hero-content">
        <div class="hero-container">
            <h1 class="hero-title">Bienvenue sur <span class="brand-gradient">gestion_pharma</span></h1>
            <p class="hero-subtitle">Votre partenaire de confiance pour tous vos besoins pharmaceutiques</p>
            <div class="hero-buttons">
                <a href="#products" class="btn btn-primary btn-lg">Voir nos Produits</a>
                <a href="#about" class="btn btn-outline-primary btn-lg">En savoir plus</a>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="features-section py-5" id="about">
    <div class="container">
        <h2 class="section-title text-center mb-5">Nos Avantages</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="bi bi-shield-check"></i>
                    </div>
                    <h3 class="feature-title">Sécurité Garantie</h3>
                    <p class="feature-text">Tous nos produits sont certifiés et conformes aux normes pharmaceutiques les plus strictes.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="bi bi-truck"></i>
                    </div>
                    <h3 class="feature-title">Livraison Rapide</h3>
                    <p class="feature-text">Nous livrons vos commandes rapidement et de manière sécurisée à votre domicile.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="bi bi-headset"></i>
                    </div>
                    <h3 class="feature-title">Support 24/7</h3>
                    <p class="feature-text">Notre équipe d'experts est disponible pour vous aider à tout moment de la journée.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Products Preview Section -->
<section class="products-section py-5" id="products">
    <div class="container">
        <h2 class="section-title text-center mb-5">Nos Produits Populaires</h2>
        <p class="text-center text-muted mb-5">Découvrez notre large gamme de produits pharmaceutiques de qualité</p>
        <div class="text-center">
            <a href="/Produits/IndexClient" class="btn btn-primary btn-lg">Parcourir le Catalogue Complet</a>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="cta-section py-5">
    <div class="container">
        <div class="cta-content">
            <h2 class="cta-title">Prêt à Commander?</h2>
            <p class="cta-text">Rejoignez des milliers de clients satisfaits qui font confiance à gestion_pharma</p>
            <a href="/Produits/IndexClient" class="btn btn-light btn-lg">Commencer à Acheter</a>
        </div>
    </div>
</section>
