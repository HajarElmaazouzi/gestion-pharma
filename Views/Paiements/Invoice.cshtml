@model gestion_pharma.Models.Entities.Paiement
@{ Layout = null; }
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Facture #@Model.Id</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
    <style>
        body { padding: 20px; font-family: Arial, sans-serif; }
        .invoice-header { border-bottom: 2px solid #eee; margin-bottom: 20px; padding-bottom: 10px; }
        .invoice-footer { border-top: 2px solid #eee; margin-top: 20px; padding-top: 10px; text-align: center; color: #777; }
        @@media print { .no-print { display: none; } }
    </style>
</head>
<body>
    <div class="container">
        <div class="no-print mb-3">
            <button onclick="window.print()" class="btn btn-primary">Imprimer / Enregistrer en PDF</button>
            <a href="/" class="btn btn-secondary">Retour à l'accueil</a>
        </div>

        <div class="invoice-header d-flex justify-content-between">
            <div>
                <h1>PharmaGest</h1>
                <p>123 Rue de la Santé<br>75000 Paris</p>
            </div>
            <div class="text-end">
                <h3>Facture</h3>
                <p><strong>N°:</strong> @(Model.Id + 1000)<br><strong>Date:</strong> @Model.CreatedAt.ToString("dd/MM/yyyy")</p>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-6">
                <h5>Facturé à :</h5>
                <p>
                    <strong>@Model.Commande?.Client?.Nom @Model.Commande?.Client?.Prenom</strong><br>
                    @Model.Commande?.Client?.Email<br>
                    @Model.Commande?.Client?.Telephone
                </p>
            </div>
        </div>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Description</th>
                    <th class="text-end">Quantité</th>
                    <th class="text-end">Prix Unitaire</th>
                    <th class="text-end">Total</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Commande?.LigneCommandes != null)
                {
                    foreach (var item in Model.Commande.LigneCommandes)
                    {
                        <tr>
                            <td>@(item.Produit?.Nom ?? "Produit")</td>
                            <td class="text-end">@item.Quantite</td>
                            <td class="text-end">@item.PrixUnitaire.ToString("C")</td>
                            <td class="text-end">@((item.Quantite * item.PrixUnitaire).ToString("C"))</td>
                        </tr>
                    }
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" class="text-end"><strong>Total :</strong></td>
                    <td class="text-end"><strong>@Model.Montant.ToString("C")</strong></td>
                </tr>
            </tfoot>
        </table>

        <div class="invoice-footer">
            <p>Merci de votre confiance !</p>
        </div>
    </div>
</body>
</html>
