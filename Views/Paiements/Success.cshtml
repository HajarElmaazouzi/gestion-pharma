@model gestion_pharma.Models.Entities.Paiement
@{
    ViewData["Title"] = "Paiement Réussi";
}

<div class="container mt-5 text-center">
    <div class="card shadow-lg p-5 border-0" style="border-radius: 20px;">
        <div class="card-body">
            <div class="mb-4">
                 <i class="bi bi-check-circle-fill text-success" style="font-size: 5rem;"></i>
            </div>
            <h1 class="display-4 text-success fw-bold">Paiement Réussi !</h1>
            <p class="lead text-muted mt-3">Merci pour votre commande. Votre transaction a été traitée avec succès.</p>
            <hr class="my-4">
            <p>Vous recevrez un email de confirmation sous peu.</p>
            @if (Model != null)
            {
                <p class="mb-2">Montant: <strong>@Model.Montant.ToString("C")</strong></p>
                <p class="mb-4">Commande #: <strong>@Model.CommandeId</strong></p>
                <a asp-action="Invoice" asp-route-id="@Model.Id" class="btn btn-outline-secondary me-2">Voir la facture</a>
            }
            <a asp-controller="Produits" asp-action="Index" class="btn btn-primary btn-lg px-5">Retour au catalogue</a>
        </div>
    </div>
</div>
