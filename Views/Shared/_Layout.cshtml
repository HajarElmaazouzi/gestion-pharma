<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pharmacare</title>
    <meta name="description" content="Pharmacare - Votre partenaire de confiance pour tous vos besoins pharmaceutiques">
    <meta name="theme-color" content="#0066cc">
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/gestion_pharma.styles.css" asp-append-version="true" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light fixed-top" style="background: white; z-index: 1000;">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-capsule-pill"></i> <span class="text-gradient">Pharmacare</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="adminMenu" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-shield-lock"></i> Administration
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="adminMenu">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Admin" asp-action="Index"><i class="bi bi-graph-up"></i> Dashboard</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Parapharmaciens" asp-action="Index"><i class="bi bi-people"></i> Gérer Parapharmaciens</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Clients" asp-action="Index"><i class="bi bi-person-check"></i> Gérer Clients</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Produits" asp-action="Index"><i class="bi bi-box"></i> Gérer Produits</a></li>
                                </ul>
                            </li>
                        }
                        else if (User.IsInRole("Parapharmacien"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="pharmaMenu" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-briefcase"></i> Mon Espace
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="pharmaMenu">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="ParapharmacienDashboard" asp-action="Index"><i class="bi bi-speedometer2"></i> Tableau de Bord</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Produits" asp-action="Index"><i class="bi bi-box"></i> Gérer Produits</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Fournisseurs" asp-action="Index"><i class="bi bi-truck"></i> Gérer Fournisseurs</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-house"></i> Accueil</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Produits" asp-action="IndexClient"><i class="bi bi-shop"></i> Catalogue</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy"><i class="bi bi-shield-check"></i> Politique</a>
                            </li>
                        }
                    </ul>
                    <div class="d-flex align-items-center gap-2">
                        @* Cart icon — visible only to Clients *@
                        @if (User.IsInRole("Client"))
                        {
                            <a class="nav-link position-relative btn btn-outline-primary btn-sm" asp-controller="Cart" asp-action="Index" title="Mon Panier" aria-label="Mon Panier">
                                <i class="bi bi-cart3" aria-hidden="true"></i>
                                <span id="cart-count-badge" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="display: none;">0</span>
                            </a>
                        }
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>
    
    <main role="main" style="margin-top: 70px;">
        @RenderBody()
    </main>

    <footer class="footer mt-5 py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-3 mb-md-0">
                    <h5 class="text-white mb-3"><i class="bi bi-capsule-pill"></i> Pharmacare</h5>
                    <p class="text-muted">Votre partenaire de confiance pour tous vos besoins pharmaceutiques.</p>
                </div>
                <div class="col-md-4 mb-3 mb-md-0">
                    <h5 class="text-white mb-3">Liens Utiles</h5>
                    <ul class="list-unstyled">
                        <li><a href="/" class="text-muted text-decoration-none"><i class="bi bi-arrow-right"></i> Accueil</a></li>
                        <li><a href="/Produits/IndexClient" class="text-muted text-decoration-none"><i class="bi bi-arrow-right"></i> Catalogue</a></li>
                        <li><a href="/Home/Privacy" class="text-muted text-decoration-none"><i class="bi bi-arrow-right"></i> Politique de Confidentialité</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5 class="text-white mb-3">Nous Contacter</h5>
                    <p class="text-muted mb-2"><i class="bi bi-envelope"></i> contact@pharmacare.com</p>
                    <p class="text-muted"><i class="bi bi-telephone"></i> +212 (0)5 XXXX XXXX</p>
                </div>
            </div>
            <hr class="border-secondary my-4">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <p class="text-muted mb-0">&copy; 2025 Pharmacare. Tous droits réservés.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <a href="#" class="text-muted text-decoration-none me-3"><i class="bi bi-facebook"></i></a>
                    <a href="#" class="text-muted text-decoration-none me-3"><i class="bi bi-twitter"></i></a>
                    <a href="#" class="text-muted text-decoration-none"><i class="bi bi-instagram"></i></a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Toast container -->
    <div aria-live="polite" aria-atomic="true" class="position-fixed bottom-0 end-0 p-3" style="z-index: 1080;">
        <div id="toast-container"></div>
    </div>

    <script>
        // fetch cart count on load
        (async function(){
            try {
                const res = await fetch('/Cart/Count');
                if (res.ok) {
                    const json = await res.json();
                    const el = document.getElementById('cart-count-badge');
                    if (el) {
                        el.innerText = json.count || 0;
                        if (json.count > 0) {
                            el.style.display = 'inline-block';
                        }
                    }
                }
            } catch (e) {
                // ignore
            }
        })();

        // Show a bootstrap toast message
        function showToast(message, title = 'Info') {
            const container = document.getElementById('toast-container');
            if (!container) return;
            const toastId = 'toast-' + Date.now();
            const html = `
                <div id="${toastId}" class="toast align-items-center text-bg-primary border-0" role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="2500">
                  <div class="d-flex">
                    <div class="toast-body">${message}</div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                  </div>
                </div>`;
            container.insertAdjacentHTML('beforeend', html);
            const toastEl = document.getElementById(toastId);
            const toast = new bootstrap.Toast(toastEl);
            toast.show();
            toastEl.addEventListener('hidden.bs.toast', () => toastEl.remove());
        }

        // Smooth scroll behavior
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth', block: 'start' });
                }
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
