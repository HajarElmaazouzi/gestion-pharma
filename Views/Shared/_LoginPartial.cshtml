@using Microsoft.AspNetCore.Identity
@using gestion_pharma.Data


@inject SignInManager<Userpers> SignInManager
@inject UserManager<Userpers> UserManager


@if (SignInManager?.IsSignedIn(User) ?? false)
{
    <ul class="nav">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index">Mon compte</a>
        </li>

        @if (User.IsInRole("Client"))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Commandes" asp-action="Index">Mes commandes</a>
            </li>
        }

        @if (User.IsInRole("Parapharmacien"))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Commandes" asp-action="Index">Gestion commandes</a>
            </li>
        }

        @if (User.IsInRole("Admin"))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Admin" asp-action="Index">Admin</a>
            </li>
        }

        <li class="nav-item">
            <form id="logoutForm" asp-area="Identity" asp-page="/Account/Logout" method="post" class="form-inline">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    </ul>
}
else
{
    <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
}
